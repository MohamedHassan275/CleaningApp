<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_profile_side"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_profile"
            android:layout_margin="12dp"
            android:layout_gravity="left"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/image_sham_left"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview_profile_user"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/design_image_view"/>

            <TextView
                android:id="@+id/tv_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohammed Ahmed"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="#fffbfbfe"/>

            <TextView
                android:id="@+id/tv_city_profileDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cairo"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:singleLine="true"
                android:textColor="#fffbfbfe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_edit_profile"
            android:layout_width="90dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_button_editprofile">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#fffbfbfe"/>
        </LinearLayout>


        <ProgressBar
            android:id="@+id/m_progress_show_profile"
            android:layout_width="15dp"
            android:layout_marginTop="3dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:visibility="gone"/>



        <LinearLayout
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_order"
                        android:layout_width="135dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        app:cardCornerRadius="7dp">

                        <LinearLayout
                            android:id="@+id/linearlayout_order_profile"
                            android:layout_width="135dp"
                            android:layout_height="85dp"
                            android:gravity="center"
                            android:background="@drawable/image_layout_order_profile">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="45dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_side_menu"
                                android:textSize="15sp"
                                android:textColor="#ff0075f8"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>


                   <LinearLayout
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <android.support.v7.widget.CardView
                           android:id="@+id/card_offers"
                           android:layout_width="135dp"
                           android:layout_height="85dp"
                           android:layout_marginTop="3dp"
                           android:layout_marginBottom="3dp"
                           app:cardCornerRadius="7dp">

                           <LinearLayout
                               android:id="@+id/linearlayout_offers_profile"
                               android:layout_gravity="center"
                               android:layout_width="135dp"
                               android:layout_height="85dp"
                               android:gravity="center"
                               android:background="@drawable/image_layout_offers_profile">

                               <TextView
                                   android:layout_marginTop="10dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="@string/others"
                                   android:layout_marginLeft="45dp"
                                   android:layout_gravity="center"
                                   android:textSize="15sp"
                                   android:textColor="#ff0075f8"/>
                           </LinearLayout>

                       </android.support.v7.widget.CardView>

                   </LinearLayout>



               </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_coupons"
                        android:layout_width="135dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        app:cardCornerRadius="7dp">

                        <LinearLayout
                            android:id="@+id/linearlayout_coupons_profile"
                            android:layout_gravity="center"
                            android:layout_width="135dp"
                            android:layout_height="85dp"
                            android:gravity="center"
                            android:background="@drawable/image_layout_coupons_profile">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/coupons"
                                android:layout_marginLeft="45dp"
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:textColor="#ff0075f8"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_share"
                        android:layout_width="135dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        app:cardCornerRadius="7dp">

                        <LinearLayout
                            android:id="@+id/linearlayout_share_profile"
                            android:layout_gravity="center"
                            android:layout_width="135dp"
                            android:layout_height="85dp"
                            android:gravity="center"
                            android:background="@drawable/image_layout_share_profile">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/share"
                                android:layout_marginLeft="45dp"
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:textColor="#ff0075f8"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_setting"
                        android:layout_width="135dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        app:cardCornerRadius="7dp">

                        <LinearLayout
                            android:id="@+id/linearlayout_setting_profile"
                            android:layout_gravity="center"
                            android:layout_width="135dp"
                            android:layout_height="85dp"
                            android:gravity="center"
                            android:background="@drawable/image_layout_setting_profile">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/setting"
                                android:layout_marginLeft="45dp"
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:textColor="#ff0075f8"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>



                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_sign_out"
                        android:layout_width="135dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        app:cardCornerRadius="7dp">

                        <LinearLayout
                            android:id="@+id/linearlayout_signOut_profile"
                            android:layout_gravity="center"
                            android:layout_width="135dp"
                            android:layout_height="85dp"
                            android:gravity="center"
                            android:background="@drawable/image_layout_sign_out_profile">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sign_out_side_menu"
                                android:layout_marginLeft="45dp"
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:textColor="#ff0075f8"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>

           </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/tab_bar_profile">


                <LinearLayout
                    android:layout_margin="22dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageview_home_profile"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/iamge_home_profile"/>

                    <ImageView
                        android:id="@+id/imageview_fillter_profile"
                        android:layout_marginLeft="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/image_sort_prfile"/>

                    <ImageView
                        android:id="@+id/imageview_sort_profile"
                        android:layout_marginLeft="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/iamge_fillter_profile"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout_profile_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    android:background="@drawable/image_layout_home_profile">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile"
                        android:layout_marginLeft="50dp"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textColor="#ff0075f8"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


        </LinearLayout>

</LinearLayout>