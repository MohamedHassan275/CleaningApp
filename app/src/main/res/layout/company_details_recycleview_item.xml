<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:layout_height="155dp"
    android:layout_marginTop="5dp">

   <LinearLayout
       android:layout_marginTop="10dp"
       android:orientation="vertical"
       android:layout_width="155dp"
       android:layout_height="155dp"
       android:background="@drawable/rectangle_item_company_details">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="155dp">

           <ImageView
               android:id="@+id/image_company_details_recycle"
               android:layout_width="155dp"
               android:layout_height="60dp"
               android:src="@drawable/iamge_item_company_details"/>

         <LinearLayout
             android:layout_gravity="center"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

             <TextView
                 android:id="@+id/tv_carWish_companyDetails_recycle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Car wash"
                 android:textSize="15sp"
                 android:textColor="#ff212121"/>

             <TextView
                 android:id="@+id/tv_Clean_companyDetails_recycle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Internal cleaning"
                 android:textSize="10sp"
                 android:layout_marginTop="7dp"
                 android:textColor="#ff757575"/>


             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp">

                 <TextView
                     android:id="@+id/tv_item_Price_comapnyDetails"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Minimum order : "
                     android:textColor="#ff212121"
                     android:textSize="10sp" />
                 <TextView
                     android:id="@+id/tv_price_Number_companyDetails_recycle"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="$2050"
                     android:textSize="10sp"
                     android:textColor="#ff212121"/>

             </LinearLayout>


         </LinearLayout>
       </LinearLayout>


   </LinearLayout>
</LinearLayout>

